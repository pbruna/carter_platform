# Database driver: mysql, pgsql, sqlite
driver = mysql

# HA / round-robin load-balancing is supported by giving multiple host
# settings, like: host=sql1.host.org host=sql2.host.org
#
# TODO: Hacer esto modificable via Puppet
connect = <% @mysql_auth_servers.each do |server| %><%= "host=#{server} " -%><% end %> dbname=carter_development user=root
# connect = host=localhost  dbname=sasl_users user=root

# http://wiki.dovecot.org/Authentication/PasswordSchemes
#default_pass_scheme = MD5
password_query = SELECT sasl_login AS user, sasl_password AS password \
	FROM users WHERE sasl_login = '%n'

#password_query = SELECT username AS user, password FROM users where username = '%n' 
